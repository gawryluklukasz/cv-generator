{% extends 'base.html.twig' %}

{% block title %}CV{% endblock %}

{% block body %}
    <style>
        body {
            margin-top: 30px;
            background: #f1f1f1;
        }

        #main-info {
            background: #d1ddd1;
        }

        #skill-box {
            background: #fff;
        }

        .wrapper {
            margin: 30px auto;
        }

        .deep-wrapper {
            margin: 20px auto;
        }

        .column {
            margin: 40px 30px;
        }

        .photo {
            max-width: 100%; 
            display:block; 
            height: auto;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            border-radius: 50%;
        }

        h1 {
            margin: 0;
            padding: 0;
        }

        h2 {
            margin: 0 0 10px 0;
            font-family: Arial;
        }

        a {
            text-decoration: none;
            font-family: sans-serif;
            color: #333;
        }

        p {
            color: #333;
            font-family: Arial;
            line-height: 30px;
            margin: 0;
        }

        ul {
            margin: 0;
            padding: 0 0 0 18px;
        }

        .text-right {
            float: right;
        }

        .firm-name {
            text-transform: uppercase;
        }

    </style>

    <div class="container">
        <div class="row">
            <div class="col-md-4" id="main-info">
                <div class="column">
                    <div class="wrapper">
                        <h1><img src="{{ asset('images/photo.jpg') }}" alt="photo" class="photo"></h1>
                    </div>
                    <div class="wrapper">
                        <h2>{{ data.name }} {{ data.surname }}</h2>
                        <p>tel. {{ data.phone }}</p>
                        <p><a href="mailto:{{ data.email }}" title="{{ data.email }}">{{ data.email }}</a></p>
                        <p>{{ data.address }}</p>
                    </div>
                    <div class="wrapper">
                        <h2>Coś o mnie</h2>
                        <p>{{ data.about }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8" id="skill-box">
                <div class="column">
                    <div class="wrapper">
                        <h2>Doświadczenie</h2>
                        {% for exp in data.experience %}
                            <div class="deep-wrapper">
                                <p class="firm-name">{{ exp.firmName }} <span class="text-right">{{ exp.start }} - {{ exp.end }}</span></p>
                                {% for res in exp.responsibilities %}
                                    <p>{{ res }}</p>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="wrapper">
                        <h2>Umiejętności</h2>
                        <ul>
                            {% for skill in data.skills %}
                                <li><p>{{ skill }}</p></li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="wrapper">
                        <h2>Zainteresowania</h2>
                        <ul>
                            {% for i in data.hobby %}
                                <li><p>{{ i }}</p></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
